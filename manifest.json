{
  "name": "JoseB Chrome Extension",
  "version": "1",
  "manifest_version": 2,
  "icons": { "128": "assets/icon.png" },
  "background": {
    "persistent": false
  },
  "permissions": ["https://www.theguardian.com/*", "https://rss.sciencedaily.com/top.xml", "https://feeds.bbci.co.uk/news/rss.xml?edition=uk*", "https://slashdot.org/slashdot.xml", "https://www.reddit.com/r/PS4Deals/new/.xml*","https://api.darksky.net/"],
  "web_accessible_resources": ["assets/ukeur.jpg", "assets/recent.png", "assets/theguardian.png", "assets/science.png", "assets/bbc-news.png", "assets/slashdot.png", "assets/comments.png", "assets/reddit.png", "assets/spinner.gif", "assets/icon-updated.gif", "*.ttf"],  
  "browser_action": {
    "default_title": "Jose Extension",
    "default_icon": "assets/icon.png",
    "default_popup": "popup.html"
  },
    "background": {
    "scripts": ["js/lib/jquery.js", "js/lib/jquery-feed.js", "js/eventpage.js"],
    "persistent": false
  },
    "content_scripts": [
    {
      "matches": ["https://*/?gfe_rd*","https://www.google.com/"],
      "css": ["css/styles.css","css/weather.css"],
      "js": [ "js/lib/jquery.js", "js/lib/jquery-feed.js", "js/eventpage.js"]
    }
  ]
}